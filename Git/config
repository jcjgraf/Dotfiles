[alias]
    squashbranch = reset $(git merge-base master $(git rev-parse --abbrev-ref HEAD))
    tree = log --decorate --pretty=oneline --abbrev-commit --graph
    csha = rev-parse HEAD
[init]
	defaultBranch = main
[color "status"]
    added = green
    changed = yellow
    untracked = red
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
