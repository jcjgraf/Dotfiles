# muttrc file for account jegraf@fotokommission.ch

## Identification
set realname = "Jean-Claude"
set from = "jegraf@fotokommission.ch"
# set sig_dashes = "no"
# set signature = "somePath"

## Cache
set header_cache = "~/.cache/mutt/jegraf@fotokommission.ch/headers"
set message_cachedir = "~/.cache/mutt/jegraf@fotokommission.ch/bodies"

## Maildir
set mbox_type = Maildir
set folder = "~/.local/share/mail/jegraf@fotokommission.ch"
set spoolfile = "+INBOX"
set record = "+Sent Items"
set postponed = "+Drafts"
set trash = "+Trash"
named-mailboxes "--- jegraf@fotokommission.ch ---" ="."
named-mailboxes "Inbox" ="INBOX"
named-mailboxes "Drafts" ="Drafts"
named-mailboxes "Archive" ="Archive"
named-mailboxes "Sent" ="Sent Items"
named-mailboxes "Trash" ="Deleted Items"
named-mailboxes "Junk" ="Junk Email"

# Hook Sendmail
set sendmail = "msmtp -a jegraf@fotokommission.ch"

# vim: filetype=neomuttrc
