# muttrc file for account mail@jeanclaudegraf.ch

## Identification
set realname = "Jean-Claude"
set from = "jegraf@ethz.ch"
# set sig_dashes = "no"
# set signature = "somePath"

## Cache
set header_cache = "~/.cache/mutt/jegraf@ethz.ch/headers"
set message_cachedir = "~/.cache/mutt/jegraf@ethz.ch/bodies"

## Maildir
set mbox_type = Maildir
set folder = "~/.local/share/mail/jegraf@ethz.ch"
set spoolfile = "+INBOX"
set record = "+Sent Items"
set postponed = "+Drafts"
set trash = "+Trash"
named-mailboxes "--- jcjgraf@ethz.ch ---" ="."
named-mailboxes "Inbox" ="INBOX"
named-mailboxes "BA" ="BA"
named-mailboxes "Drafts" ="Drafts"
named-mailboxes "Sent" ="Sent Items"
named-mailboxes "Trash" ="Trash"
named-mailboxes "Junk" ="Junk Email"

# Hook Sendmail
set sendmail = "msmtp -a jegraf@ethz.ch"

# vim: filetype=neomuttrc
