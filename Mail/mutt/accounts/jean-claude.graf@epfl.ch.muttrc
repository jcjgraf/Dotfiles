# muttrc file for account jean-claude.graf@epfl.ch

## Identification
set realname = "Jean-Claude"
set from = "jean-claude.graf@epfl.ch"
# set sig_dashes = "no"
# set signature = "somePath"

## Cache
set header_cache = "~/.cache/mutt/jean-claude.graf@epfl.ch/headers"
set message_cachedir = "~/.cache/mutt/jean-claude.graf@epfl.ch/bodies"

## Maildir
set mbox_type = Maildir
set folder = "~/.local/share/mail/jean-claude.graf@epfl.ch"
set spoolfile = "+INBOX"
set record = "+Sent Items"
set postponed = "+Drafts"
set trash = "+Trash"
named-mailboxes "--- jean-claude.graf@epfl.ch ---" ="."
named-mailboxes "Inbox" ="INBOX"
named-mailboxes "Drafts" ="Drafts"
named-mailboxes "Sent" ="Sent Items"
named-mailboxes "Trash" ="Deleted Items"
named-mailboxes "Junk" ="Junk Email"

# Hook Sendmail
set sendmail = "msmtp -a jean-claude.graf@epfl.ch"

# vim: filetype=neomuttrc
